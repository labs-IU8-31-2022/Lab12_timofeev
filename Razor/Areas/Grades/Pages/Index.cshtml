@page
@model Razor.Areas.Grades.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Оценки</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Students)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Russian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].English)
            </th>
            <th>
                @Html.DisplayName("Discrete Math")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Physics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade[0].Algorithms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grade) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Students.StudentName)
                @Html.DisplayFor(modelItem => item.Students.Groups!.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Russian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.English)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscreteMath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Physics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Algorithms)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GradeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GradeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GradeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
