<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:App;assembly=App"
             x:Class="App.GroupEditAndAdd"
             x:DataType="app:Group"
             Title="">
    <ContentPage.Content>
        <StackLayout Padding="7">
            <Label Text="Название группы" />
            <Entry x:Name="Name" Placeholder="Введите название" Text="{Binding GroupName}" />
            <Button x:Name="Button" Text="Сохранить" Clicked="GrAdd" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>